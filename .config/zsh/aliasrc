##############
####ALIASES###
##############

# Pacman 
alias paclean="sudo pacman -Sc"
alias pacrm="sudo pacman -R"
alias pacyeet="sudo pacman -Rcs"
alias pacrmorpans="sudo pacman -Rc $(pacman -Qtdq)"
alias pacsync="sudo pacman -Syy"
alias pacupg="sudo pacman -Syu"
alias pacins="sudo pacman -S"

# Command aliases
alias cat="bat"
alias mv="mv -iv"
alias cp="cp -vr"
alias mkdir="mkdir -pv"
alias rm="rm -vrI"
alias grep="grep --color=auto"
alias diff="diff --color=auto"
alias ls="eza --group-directories-first --icons=always"
alias ll="eza -Ahl --group-directories-first --icons=always"
alias lt="eza -A --tree --level=1 --icons=always"

# git aliases
alias ga="git add"
alias gc="git commit"
alias gca="git commit -a"
alias gch="git checkout"
alias gd="git diff"
alias gst="git status"
alias gb="git branch"
alias gpl="git pull"
alias gpu="git push"

# tmux aliases
alias tn="tmux new -s"
alias ta="tmux attach"
alias tk="tmux kill-session -t"
alias tl="tmux ls"

alias ytd="yt-dlp -c" #continue from where download stopped
alias yz="yazi"
alias v="nvim"
alias ncmp="ncmpcpp -q"
alias clamscan="clamscan -ir"
alias mupdf="mupdf"
